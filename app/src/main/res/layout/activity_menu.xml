<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3D8DCA"
    tools:context="com.example.ibrokhimov.draft_final.Menu">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout2">

        <Button
            android:id="@+id/culture"

            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:onClick="changeAct"
            android:shadowColor="@android:color/white"
            android:text="Korean Culture"
            android:textColor="#3D8DCA"
            tools:layout_editor_absoluteX="146dp"
            tools:layout_editor_absoluteY="229dp" />

        <Button
            android:id="@+id/history"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/k_foreigners"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:onClick="changeAct"
            android:text="historical places"
            android:textColor="#3D8DCA" />

        <Button
            android:id="@+id/food"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/culture"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:onClick="changeAct"
            android:text="Foods"
            android:textColor="#3D8DCA" />

        <Button
            android:id="@+id/weather"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/shoping"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:onClick="changeAct"
            android:text="Weather"
            android:textColor="#3D8DCA" />

        <Button
            android:id="@+id/shoping"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/historical_places"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:onClick="changeAct"
            android:text="items for sale"
            android:textColor="#3D8DCA" />

        <Button
            android:id="@+id/contactus"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_above="@+id/exit"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:onClick="changeAct"
            android:text="CONTACT US"
            android:textColor="#3D8DCA" />

        <Button
            android:id="@+id/exit"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:onClick="changeAct"
            android:text="Exit"
            android:textColor="#3D8DCA" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        app:srcCompat="@drawable/korea" />

</RelativeLayout>
